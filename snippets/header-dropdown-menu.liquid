{% comment %}
  Renders a standard dropdown style menu for the header.

  Usage:
  {% render 'header-dropdown-menu' %}
{% endcomment %}


<style>
  
.header__menu-item span{
  color: #141414;

  font-family: var(--font-heading-family);
font-size: 14px;
font-style: normal;
font-weight: 700;
line-height: 150%; 
letter-spacing: 1.12px;
text-transform: uppercase;

}
.header__menu-item span {
  position: relative;
  display: block;
  cursor: pointer;

  color: #141414;
  text-decoration: none;
  color: #141414;
  font-family: var(--font-heading-family);
  font-size: 14px;
  font-style: normal;
  font-weight: 700;
  line-height: 150%; /* 21px */
  text-transform: uppercase;
  opacity: 1;
  transition: 300ms;
}

.header__menu-item.active span {
  color: #141414;
  font-family: var(--font-heading-family);
  font-size: 14px;
  font-style: normal;
  font-weight: 700;
  line-height: 150%;

  text-transform: uppercase;
  opacity: 1 !important;
  transition: 300ms;
}

.header__menu-item span:hover {
  color: #141414;
  text-decoration: none;
}

.header__menu-item span:before,
.header__menu-item span:after {
  content: "";
  position: absolute;
  width: 0%;
  height: 2px;
  bottom: -2px;
  background: #141414;
}

.header__menu-item span:before {
  left: 0;
}
.header__menu-item span:after {
  right: 0;
  background: #141414;
  transition: width 0.8s cubic-bezier(0.22, 0.61, 0.36, 1);
}

.header__menu-item span:hover:before {
  background: #141414;
  width: 100%;
  transition: width 0.5s cubic-bezier(0.22, 0.61, 0.36, 1);
}

.header__menu-item span:hover:after {
  background: transparent;
  width: 100%;
  transition: 0s;
}

.header__menu-item.active span:before,
.header__menu-item.active span:after {
  content: "";
  position: absolute;
  width: 0%;
  height: 2px;
  bottom: -2px;
  background: #141414;
}
.header__menu-item.active span:before {
  background: #141414;
  width: 100%;
  transition: width 0.5s cubic-bezier(0.22, 0.61, 0.36, 1);
}

/** Submenu **/
details[open]>.header__submenu {


  background: #F7F8FA;
  border-bottom-left-radius:20px;
   border-bottom-right-radius:20px;
  padding:20px 20px ;
}
  .header__submenu .header__menu-item {
   display:inline-flex;
}

.header__submenu li a {
  position: relative;
  display: block;
  cursor: pointer;

  color: #141414;
  text-decoration: none;
  color: #141414;
  font-family: var(--font-heading-family);

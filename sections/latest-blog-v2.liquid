<section
  id="section-{{ section.id }}"
  class="section--latest-blog"
  style="background: {{ section.settings.bg_color }};"
>
  <div class="latest-blog-container page-width">
    <div class="latest-blog-left">
      {% if section.settings.heading != blank %}
        <h2 class="latest-blog-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <div class="latest-blog-subheading">{{ section.settings.subheading }}</div>
      {% endif %}

      <div class="latest-blog-list">
        {% for block in section.blocks %}
          {% if block.settings.article != blank %}
            {% assign article = articles[block.settings.article] %}
            {% if article %}
              <a href="{{ article.url }}" class="latest-blog-item" {{ block.shopify_attributes }}>
                {% if article.image %}
                  {{ article.image | image_url: width: 80 | image_tag: class: "latest-blog-thumb" }}
                {% endif %}
                <span class="latest-blog-title">{{ article.title }}</span>
              </a>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>

      {% if section.settings.button_text != blank %}
        <div class="latest-blog-cta">
          <a href="{{ section.settings.button_link }}" class="btn button-white">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>

    {% if section.settings.side_image != blank %}
      <div class="latest-blog-right">
        <img
          src="{{ section.settings.side_image | img_url: '800x' }}"
          alt=""
          class="latest-blog-side-image"
        >
      </div>
    {% endif %}
  </div>
</section>

<style>
#section-{{ section.id }} {
  padding: 80px 20px;
  color: #fff;
}
#section-{{ section.id }} .latest-blog-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: center;
}
@media (max-width: 980px) {
  #section-{{ section.id }} .latest-blog-container {
    grid-template-columns: 1fr;
    text-align: center;
  }
}

.latest-blog-heading {
  font-size: clamp(24px, 4vw, 36px);
  font-weight: 800;
  margin-bottom: 20px;
  text-transform: uppercase;
}
.latest-blog-subheading {
  font-size: 16px;
  line-height: 1.6;
  margin-bottom: 30px;
  max-width: 520px;
}
.latest-blog-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-bottom: 30px;
}
.latest-blog-item {
  display: inline-flex;
  align-items: center;
  gap: 14px;
  color: #cfd4da;
  font-weight: 700;
  text-transform: uppercase;
  text-decoration: none;
  font-size: 18px;
}
.latest-blog-item:hover {
  color: #fff;
}
.latest-blog-thumb {
  width: 60px;
  height: 60px;
  border-radius: 8px;
  object-fit: cover;
}
.latest-blog-cta .btn.button-white {
  background: #fff;
  color: #133257;
  font-weight: 700;
  border-radius: 8px;
  padding: 12px 20px;
  display: inline-block;
}

.latest-blog-right img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  display: block;
}
</style>

{% schema %}
{
  "name": "Latest Blog v2",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest from the Blog"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Insights, strategies, and real talk to help you grow, lead, and level up your fitness career.</p>"
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Right side image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#133257"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View All Blogs"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/"
    }
  ],
  "blocks": [
    {
      "type": "blog_post",
      "name": "Blog Post",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Select blog article"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Latest Blog v2",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% schema %}
{
  "name": "Text Form",
  "settings": [
     {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "default": "section-id"
    },
      {
      "type": "range",
      "id": "top_padding",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 92
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 92
    },
    
   {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Lorem ipsum dolor sit amet"
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>"
    },
      {
      "type": "text",
      "id": "webhook_url",
      "label": "Zapier Webhook URL",
      "default": "https://hooks.zapier.com/hooks/catch/xxxxxx/"
    },
       
  ],

  "presets": [
    {
      "name": "Text Form",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}


<section class="section--text-form" id="{{ section.settings.section_id }}" style="padding-top: {{ section.settings.top_padding }}px; padding-bottom: {{ section.settings.bottom_padding }}px;">
  <div class="section--text-form-container page-container ">

    <div class="text-form--column-left">
<div class="section--title-block " >

    <h2>{{ section.settings.section_title }}</h2>
  <div class="text-form-description " >
{{ section.settings.section_description }}
</div>
</div>
    


    </div>

        <div class="text-form--column-right">
 <div class="form-wrapper">
  <form method="POST" action="{{ section.settings.webhook_url }}">
    <div class="form-row">
      <div class="form-column">
        <label for="first-name">First Name*</label>
        <input type="text" id="first-name" name="first_name" placeholder="Your first name" required>
      </div>

      <div class="form-column">
        <label for="last-name">Last Name*</label>
        <input type="text" id="last-name" name="last_name" placeholder="Your last name" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-column">
        <label for="email">Email*</label>
        <input type="email" id="email" name="email" placeholder="Your email address" required>
      </div>

      <div class="form-column">
        <label for="phone-number">Phone Number*</label>
        <input type="tel" id="phone-number" name="phone" placeholder="Phone Number" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-column">
        <label for="message">Message*</label>
        <textarea id="message" name="message" placeholder="Type your message here..." required></textarea>
      </div>
    </div>



    <button type="submit" class="form-button btn button-yg" name="commit" aria-label="{{ 'newsletter.button_label' | t }}">
  <span class="btn-label-down">Submit</span>
  <span class="btn-label-down">Submit</span>
</button>


    
  </form>

</div>
  </div>
  </div>
</section>




<div class="form-container">
  <h1>{{ section.settings.heading }}</h1>
  <form action="/contact#newsletter" method="post" accept-charset="UTF-8" class="contact-form">
    <input type="hidden" name="form_type" value="customer">
    <input type="hidden" name="utf8" value="âœ“">
    
    <label for="email">{{ section.settings.email_label }}</label>
    <input type="email" name="contact[email]" id="email" placeholder="{{ section.settings.email_placeholder }}" required>

    <button type="submit">{{ section.settings.button_text }}</button>

    <p>{{ section.settings.disclaimer_text }} <a href="{{ section.settings.privacy_policy_link }}">{{ section.settings.privacy_policy_text }}</a>.</p>
  </form>
</div>

<style>
  .form-container {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
  }

  .form-container h1 {
    font-size: 24px;
    margin-bottom: 20px;
  }

  .form-container form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .form-container label {
    display: none;
  }

  .form-container input {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .form-container button {
    background-color: #f1c40f;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .form-container button:hover {
    background-color: #d4ac0d;
  }

  .form-container p {
    font-size: 12px;
    color: #888;
    margin-top: 10px;
  }

  .form-container p a {
    color: #000;
    text-decoration: underline;
  }
</style>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SIGN UP TO RECEIVE A FREE PERSONAL TRAINER START UP GUIDE"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Label",
      "default": "EMAIL*"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SIGN UP"
    },
    {
      "type": "text",
      "id": "disclaimer_text",
      "label": "Disclaimer Text",
      "default": "By submitting this form, you agree to receive emails about our products, apps, sales, exclusive content and more."
    },
    {
      "type": "url",
      "id": "privacy_policy_link",
      "label": "Privacy Policy Link",
      "default": "/"
    },
    {
      "type": "text",
      "id": "privacy_policy_text",
      "label": "Privacy Policy Text",
      "default": "Privacy Policy"
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Contact",
      "settings": {
        "heading": "SIGN UP TO RECEIVE A FREE PERSONAL TRAINER START UP GUIDE",
        "email_label": "EMAIL*",
        "email_placeholder": "Enter your email",
        "button_text": "SIGN UP",
        "disclaimer_text": "By submitting this form, you agree to receive emails about our products, apps, sales, exclusive content and more.",
        "privacy_policy_link": "/",
        "privacy_policy_text": "Privacy Policy"
      }
    }
  ]
}
{% endschema %}

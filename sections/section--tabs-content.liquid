}


  
.tabs-list li span {
  position: relative;
  display: block;
  cursor: pointer;

  color: #141414;
  text-decoration: none;
  color:  #141414;
font-family: Montserrat;
font-size: 14px;
font-style: normal;
font-weight: 700;
line-height: 150%; /* 21px */
text-transform: uppercase;
  opacity: 0.4;
    transition:300ms;
  
}

  .tabs-list li.active span {
color: #141414;
font-family: Montserrat;
font-size: 14px;
font-style: normal;
font-weight: 700;
line-height: 150%; 

text-transform: uppercase;
    opacity: 1 !important;
  transition:300ms;
}

  
.tabs-list li span:hover{
  color: #141414;
  text-decoration: none;
}

.tabs-list li span:before, .tabs-list li span:after {
  content: '';
  position: absolute;
  width: 0%;
  height: 2px;
  bottom: -2px;
  background: #141414;
}

.tabs-list li span:before {
  left: 0;
}
.tabs-list li span:after {
  right: 0;
  background: #141414;
  transition: width 0.8s cubic-bezier(0.22, 0.61, 0.36, 1);
}

.tabs-list li span:hover:before {
  background: #141414;
  width: 100%;
  transition: width 0.5s cubic-bezier(0.22, 0.61, 0.36, 1);
}

.tabs-list li span:hover:after {
  background: transparent;
  width: 100%;
  transition: 0s;
}

  .tabs-list li.active  span:before, .tabs-list li.active  span:after {
  content: '';
  position: absolute;
  width: 0%;
  height: 2px;
  bottom: -2px;
  background: #141414;
}
  .tabs-list li.active span:before {
  background: #141414;
  width: 100%;
  transition: width 0.5s cubic-bezier(0.22, 0.61, 0.36, 1);
}
</style>

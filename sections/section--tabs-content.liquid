<section class="section--tabs-content" id="{{ section.settings.section_id }}">
  <div class="section--tabs-content-container page-container ">


<div class="section--title-block page-container" style="display: flex; justify-content: {{ section.settings.alignment }};">
  <div style="max-width: {{ section.settings.container_width }}px;">
    <h2 style="text-align: {{ section.settings.title_alignment }};">{{ section.settings.section_title }}</h2>
    <p style="text-align: {{ section.settings.title_alignment }};">{{ section.settings.section_description }}</p>
  </div>
</div>





<div class="tabs--container">
    <ul class="tabs-list">
        {% for block in section.blocks %}
        <li class="tab-item{% if forloop.first %} active{% endif %}" data-tab="tab-{{ block.id }}">
          <span>  {{ block.settings.tab_title }}</span>
        </li>
        {% endfor %}
    </ul>

    <div class="tab-content-container">
        {% for block in section.blocks %}
        <div class="tab-content{% if forloop.first %} active{% endif %}" id="tab-{{ block.id }}">
   


                  <div class="tabs--content">
            <div class="tabs-content--column-left">
                <div class="section--title-block  ">
                    <h3 class="is--flex-start">{{ block.settings.heading }}</h3> 
                 
                </div>

                <div class="text-content--description">
                  {{ block.settings.description }}
                </div>

                <div class="section--hero-buttons">
                    <a href="{{ section.settings.primary_button_link }}" class="btn button-yg">
                        <span class="btn-label-down">{{ block.settings.primary_button_text }}</span>
                        <span class="btn-label-down">{{ block.settings.primary_button_text }}</span>
                    </a>
                    <a href="{{ section.settings.secondary_button_link }}" class="btn button-w">
                        <span class="btn-label-down">{{ block.settings.secondary_button_text }}</span>
                        <span class="btn-label-down">{{ block.settings.secondary_button_text }}</span>
                    </a>
                </div>
            </div>
            <div class="tab-content--column-right">
            <div class="tab-img-wrap">
            {% if block.settings.tab_image %}
  <img src="{{ block.settings.tab_image | img_url: '800x' }}" alt="{{ block.settings.alt_text }}">
{% else %}
  <p>No image available</p>
{% endif %}
            </div>

              
            </div>
        </div>


          
        </div>
        {% endfor %}
    </div>
</div>



<script>
document.querySelectorAll('.tab-item').forEach(function(tab) {
    tab.addEventListener('click', function() {
        document.querySelectorAll('.tab-item, .tab-content').forEach(function(item) {
            item.classList.remove('active');
        });
        tab.classList.add('active');
        document.getElementById(tab.getAttribute('data-tab')).classList.add('active');
    });
});
</script>


      </div>
</section>


{% schema %}
{
  "name": "Tutoring Blurb",
  "settings": [
    {
      "type": "header",
      "content": "Apprentice Blurb Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "BECOME AN AFFILIATE"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Earn commissions by signing up your followers, friends and colleagues for any of our programs. Inspire others to begin their own careers in the fitness and wellness industry and put some extra money in your pocket!</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "JOIN TODAY"
    },
         {
            "type": "url",
            "id": "video_url",
            "label": "Video URL"
        },
        {
      "type": "image_picker",
      "id": "image",
      "label": "Select an image",
      "info": "Choose an image from your files."
    },
    {
      "type": "checkbox",
      "id": "enable_custom_image_height",
      "label": "Enable custom image height",
      "default": false
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image height (value)",
      "min": 100,
      "max": 1100,
      "step": 10,
      "unit": "px",
      "default": 480
    },
    {
      "type": "select",
      "id": "image_height_unit",
      "label": "Image height unit",
      "options": [
        { "value": "px", "label": "px" },
        { "value": "vh", "label": "vh" }
      ],
      "default": "px"
    },
    {
      "type": "select",
      "id": "image_object_fit",
      "label": "Object fit",
      "info": "Use “Contain” to show the full image with no cropping.",
      "options": [
        { "value": "contain",     "label": "Contain (no crop)" },
        { "value": "cover",       "label": "Cover (crop may occur)" },
        { "value": "fill",        "label": "Fill (stretch)" },
        { "value": "scale-down",  "label": "Scale down" }
      ],
      "default": "contain"
    },
    {
      "type": "select",
      "id": "image_object_position",
      "label": "Object position",
      "options": [
        { "value": "center center", "label": "Center" },
        { "value": "top center",    "label": "Top" },
        { "value": "bottom center", "label": "Bottom" },
        { "value": "left center",   "label": "Left" },
        { "value": "right center",  "label": "Right" },
        { "value": "top left",      "label": "Top left" },
        { "value": "top right",     "label": "Top right" },
        { "value": "bottom left",   "label": "Bottom left" },
        { "value": "bottom right",  "label": "Bottom right" }
      ],
      "default": "center center"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    },
{
      "type": "range",
      "id": "top_padding",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 92
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 92
    },
   {
      "type": "range",
      "id": "container_width",
      "label": "Container width",
      "min": 200,
      "max": 2000,
      "step": 20,
      "unit": "px",
      "default": 980
    },
    {
      "type": "select",
      "id": "blurb_items_alignment",
      "label": "Items alignment",
      "info": "Controls align-items on the blurb content container (flex/grid).",
      "options": [
        { "value": "flex-start", "label": "Flex Start" },
        { "value": "center",     "label": "Center" },
        { "value": "flex-end",   "label": "Flex End" }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "blurb",
      "name": "Blurb",
      "settings": [
        {
          "type": "text",
          "id": "blurb_title",
          "label": "Blurb Title",
          "default": "LOREM IPSUM"
        },
        {
          "type": "richtext",
          "id": "blurb_description",
          "label": "Blurb Description",
          "default": "<p>Highlight of affiliate goes here. Lorem ipsum dolor sit amet consectetur. Et est varius viverra.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tutoring blurb",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="section--blurb-content" style="padding-top: {{ section.settings.top_padding }}px; padding-bottom: {{ section.settings.bottom_padding }}px;">
  <div class="blurb-content-container page-container" style="max-width: {{ section.settings.container_width }}px; align-items: {{ section.settings.blurb_items_alignment }};">

      <div class="blurb-content-left-column">
                <div class="section--title-block ">
                  {% unless section.settings.title == blank %}
                    <h2 class="is--flex-start">{{ section.settings.title }}</h2> 
                  {% endunless %}
                    <div class="title-block--desc">{{ section.settings.description }}</div>
                </div>

                <div class="section--hero-buttons">
                    <a href="{{ section.settings.button_link }}" class="btn button-yg">
                        <span class="btn-label-down">{{ section.settings.button_text }}</span>
                        <span class="btn-label-down">{{ section.settings.button_text }}</span>
                    </a>
                </div>
        </div>


<div class="blurb-content-right-column">

                {% if section.settings.video_url %}
                    <div class="video-wrapper">
                        <iframe src="{{ section.settings.video_url | replace: 'watch?v=', 'embed/' }}" frameborder="0" allowfullscreen></iframe>
                    </div>
                 
                {% endif %}
                 {% if section.settings.image %}
                    <div class="image-wrapper">
                    {% if section.settings.image %}
                    <img
                      src="{{ section.settings.image | img_url: 'original' }}"
                      alt="{{ section.settings.alt_text }}"
                      style="
                        width: 100%;
                        {% if section.settings.enable_custom_image_height %}
                          height: {{ section.settings.image_height }}{{ section.settings.image_height_unit }};
                        {% else %}
                          height: auto;
                        {% endif %}
                        object-fit: {{ section.settings.image_object_fit }};
                        object-position: {{ section.settings.image_object_position }};
                        display: block;
                      "
                    >
                    {% else %}
                    <p>No image available</p>
                    {% endif %}
              
                    </div>
                        
                  
                  
                {% endif %}
      
   </div>

    
  </div>
</section>


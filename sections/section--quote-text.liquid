{% schema %}
{
    "name": "Text Quote",
    "settings": [
              {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "default": "certified-trainers"
    },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Lorem ipsum dolor sit amet"
        },
      {
                    "type": "textarea",
                    "id": "description",
                    "label": " Description",
                    "default": "description goes here."
                },
          {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "JOIN TODAY"
    },
          {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    },
      {
      "type": "image_picker",
      "id": "image",
      "label": "Select an image",
      "info": "Choose an image from your files."
    },
 

    ],

    "presets": [
        {
            "name": "Text Quote",
            "category": "Custom Sections"
        }
    ]
}
{% endschema %}


<section class="section--quote-text" >
  <div class="quote-text--container page-container">
    <div class="quote-text--content">
      <div class="quote-text--column-left">
        <div class="image-wrapper">
          {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: 'original' }}" alt="{{ section.settings.alt_text }}">
          {% else %}
          <p>No image available</p>
          {% endif %}

        </div>

        <div class="quote-wrap"><div class="quote-text-inner"><p>Your potential as a fitness professional is limitless. Empower yourself, lead others, and change lives.</p></br><p> â€“ Jesse Benson, CEO of NPTA </p></div></div>

      </div>
      <div class="quote-text--column-right">
        <div class="section--title-block is--heading-white">
          <h2 class="is--flex-start">{{ section.settings.heading }}</h2>
          <p>{{ section.settings.description }}</p>

               <div class="section--hero-buttons">
                    <a target="_blank" href="{{ section.settings.button_link }}" class="btn button-yg">
                        <span class="btn-label-down">{{ section.settings.button_text }}</span>
                        <span class="btn-label-down">{{ section.settings.button_text }}</span>
                    </a>
                </div>
        </div>


          
        
      </div>
    </div>
  </div>
</section>

